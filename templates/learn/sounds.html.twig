{% block body %}

	<div class="d-flex flex-column vh-100 overflow-y-auto" id="soundsContainer">
		<div class="subtitle my-5 h4 fw-bold text-center">Voyelles</div>
		<div class="d-flex flex-column">
			<div class="d-flex justify-content-center gap-2 flex-wrap">
				{% for data in vowels %}

					<a href="#" class="text-decoration-none vowelContainer">
						<audio src="{{asset('audio/letters/' ~ data.audio)}}"></audio>
						<div class="sound-container {% if data.progress == 100 %}bg-warning-subtle border-warning text-secondary{% endif %} d-flex flex-column justify-content-center text-center border border-bg-secondary px-5 py-3 mb-3 rounded-4 shadow-sm fs-5">
							<span class="fw-bold text-secondary">{{data.letter}}</span>
							<span class="text-secondary">{{data.example}}</span>
							<div class="soundBtn mt-2">
								<div class="progress" role="progressbar" aria-label="Progression pour {{ data.letter }}" aria-valuenow="{{ data.progress|default(0) }}" aria-valuemin="0" aria-valuemax="100">
									<div class="progress-bar {% if data.progress == 100 %}bg-warning text-light{% else %}bg-success{% endif %}" style="width: {{ data.progress|default(0) }}%"></div>
								</div>
							</div>
						</div>
					</a>
				{% endfor %}
			</div>

			<div class="subtitle my-5 h4 fw-bold text-center">Consonnes</div>

			<div class="d-flex justify-content-center gap-2 flex-wrap mb-5">
				{% for data in consonants %}

					<a href="#" class="text-decoration-none consonnantContainer">
						<audio src="{{asset('audio/letters/' ~ data.audio)}}"></audio>
						<div class="sound-container {% if data.progress == 100 %}border-warning text-secondary{% endif %} d-flex flex-column justify-content-center text-center border border-bg-secondary px-5 py-3 mb-3 rounded-4 shadow-sm fs-5">
							<span class="fw-bold text-secondary">{{data.letter}}</span>
							<span class="text-secondary">{{data.example}}</span>
							<div class="soundBtn mt-2">
								<div class="progress" role="progressbar" aria-label="Progression pour {{ data.letter }}" aria-valuenow="{{ data.progress|default(0) }}" aria-valuemin="0" aria-valuemax="100">
									<div class="progress-bar {% if data.progress == 100 %}bg-warning text-dark{% else %}bg-success{% endif %}" style="width: {{ data.progress|default(0) }}%"></div>
								</div>
							</div>
						</div>
					</a>
				{% endfor %}

			</div>
		</div>
	</div>
	 <script src="{{ asset('js/soundLesson.js') }}"></script>
{% endblock %}
