{% extends 'base.html.twig' %}

{% block title %}Ekkitugol - Modifier Profil
{% endblock %}

{% block body %}
	<div class="container-fluid d-flex justify-content-start align-items-start">
		{% include("navigation.html.twig") %}

		<div class="mx-auto mt-5" style="min-width: 500px;">
			<div class="min-vh-100 flex-fill mx-auto">
				{{ include('profile/_form.html.twig', {'button_label': 'Modifier'}) }}

				{% if currentRouteName == 'app_user_change_password' %}
					{{ include('user/change_password.html.twig', {'button_label': 'Changer Mot de Passe'}) }}
				{% endif %}

				<a href="{{ path('app_profile_index') }}" class="btn btn-secondary">Retour</a>
			</div>
		</div>
	</div>
{% endblock %}
