{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="col-10 mx-auto col-sm-10 col-md-8 col-lg-6 py-5 vh-100 d-flex align-items-center">
		<form method="post" class="mx-auto p-4 p-md-5 border rounded-3 bg-body-tertiary">
			{% if error %}
				<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}
			{% if app.user %}
				<div class="mb-5">
					Vous êtes connecté en tant que
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Déconnexion</a>
				</div>
			{% endif %}
			<h1 class="h3 mb-5 font-weight-normal">Veuillez vous connecter</h1>
			<div class="form-floating mb-5">
				<input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
				<label for="username">Email</label>
			</div>
			<div class="form-floating mb-5">
				<input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
				<label for="password">Mot de passe</label>
			</div>
			<input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">
			<button class="w-100 btn btn-lg btn-success mb-3" type="submit">
				Connexion
			</button>
			<p class="text-center px-2">Vous n'avez pas de compte, veuillez vous inscrire
				<span>
					<a href="{{path('app_register')}}">ici</a>
				</span>
			</p>
		</form>
	</div>
{% endblock %}
