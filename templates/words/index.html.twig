{% block body %}


	<div class="d-flex flex-column vh-100 overflow-y-auto" id="wordsContainer">

		<div class="d-flex flex-column">
			<div class="subtitle my-5 h4 fw-bold text-center">Vocabulaire</div>
			<div class="d-flex justify-content-center gap-2 flex-wrap">
				{% for word in words %}

					<a
						href="#" class="text-decoration-none wordAudioContainer">
						{# <audio src="{{asset('audio/words/' ~ word.audio)}}"></audio> #}
						<div class="word-container {% if word.progress == 100 %}bg-warning text-light{% endif %} d-flex flex-column justify-content-center align-items-center text-center border px-5 py-3 mb-3 rounded-4 shadow-sm fs-5">
							<span class="fw-bold text-dark">{{word.peul}}</span>
							<span class="text-secondary">{{word.french}}</span>
							<div class="soundBtn mt-2">
								<div class="progress" role="progressbar" aria-label="Progression pour {{ word.peul }}" aria-valuenow="{{ word.progress|default(0) }}" aria-valuemin="0" aria-valuemax="100">
									<div class="progress-bar {% if word.progress == 100 %}bg-warning text-light{% else %}bg-success{% endif %}" style="width: {{ word.progress|default(0) }}%"></div>
								</div>
							</div>
						</div>
					</a>
				{% endfor %}
			</div>
		</div>

		{% block script %}
			 <script src="{{ asset('/js/wordPageAudio.js') }}"></script>

		{% endblock %}

	{% endblock %}
